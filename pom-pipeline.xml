<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.baxter.ci</groupId>
        <artifactId>ci-base</artifactId>
        <version>1.11</version>
    </parent>

    <groupId>com.baxter</groupId>
    <artifactId>baxter-connector-jenkins-pipeline</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>Baxter Connector for Jenkins Pipeline</name>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>fetch-jms-packages</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <outputDirectory>${repobase.dir}</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.baxter.jms</groupId>
                                    <artifactId>baxter-swiftmq-connector</artifactId>
                                    <version>2.1.3</version>
                                    <classifier>${distribution}</classifier>
                                    <type>rpm</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.baxter.jms</groupId>
                                    <artifactId>baxter-swiftmq-connector</artifactId>
                                    <version>7.3.0</version>
                                    <classifier>${distribution}</classifier>
                                    <type>rpm</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.baxter.jms</groupId>
                                    <artifactId>baxter-swiftmq-connector</artifactId>
                                    <version>7.5.4</version>
                                    <classifier>${distribution}</classifier>
                                    <type>rpm</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.baxter.jms</groupId>
                                    <artifactId>baxter-swiftmq-connector</artifactId>
                                    <version>9.2.5</version>
                                    <classifier>${distribution}</classifier>
                                    <type>rpm</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.baxter.jms</groupId>
                                    <artifactId>baxter-tibco-connector</artifactId>
                                    <version>6.0.0</version>
                                    <classifier>${distribution}</classifier>
                                    <type>rpm</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.baxter.jms</groupId>
                                    <artifactId>baxter-tibco-connector</artifactId>
                                    <version>6.3.0</version>
                                    <classifier>${distribution}</classifier>
                                    <type>rpm</type>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.baxter.log</groupId>
            <artifactId>baxter-log4j-connector</artifactId>
            <version>1.2.16</version>
            <classifier>${distribution}</classifier>
            <type>rpm</type>
        </dependency>
        <dependency>
            <groupId>com.baxter.log</groupId>
            <artifactId>baxter-logback-connector</artifactId>
            <version>1.0.13</version>
            <classifier>${distribution}</classifier>
            <type>rpm</type>
        </dependency>
    </dependencies>
</project>
